@model IEnumerable<CourseTracker.DATA.EF.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-light m-5">Courses</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>    
}
<table class="table table-dark">
    <thead>
        <tr class="text-light">
            <th scope="col">
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.CourseDescription)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.CreditHours)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Curriculum)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            @if (User.IsInRole("Admin"))
            {
                <th scope="col">
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                    Admin
            </th>
                
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-light">
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreditHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curriculum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
          
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CourseId">Edit</a>                 
                        <a asp-action = "Details" asp-route-id = "@item.CourseId" > Details </a> 
                        <a asp-action = "Delete" asp-route-id = "@item.CourseId" > Delete </a>
                    </td>
                }
        
            <td></td>
        </tr>
}
    </tbody>
</table>
